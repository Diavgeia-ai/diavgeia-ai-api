{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*"
, "server.ts"    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  